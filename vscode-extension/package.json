{
  "name": "prism-extension",
  "displayName": "Prism - Intelligent Collaboration",
  "description": "AI-powered collaboration tool for preventing merge conflicts and enhancing team productivity",
  "version": "0.1.0",
  "publisher": "skill-issue",
  "icon": "assets/prism-icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Collaboration",
    "AI",
    "Project Management"
  ],
  "keywords": [
    "collaboration",
    "merge-conflicts",
    "ai",
    "team",
    "productivity",
    "gemini"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prism.openDashboard",
        "title": "Open Prism Dashboard",
        "category": "Prism"
      },
      {
        "command": "prism.startTask",
        "title": "Start New Task",
        "category": "Prism",
        "icon": "$(play)"
      },
      {
        "command": "prism.checkConflicts",
        "title": "Check for Conflicts",
        "category": "Prism",
        "icon": "$(warning)"
      },
      {
        "command": "prism.openChat",
        "title": "Open Team Chat",
        "category": "Prism",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "prism.showTasks",
        "title": "Show My Tasks",
        "category": "Prism",
        "icon": "$(checklist)"
      }
    ],
    "views": {
      "prism-sidebar": [
        {
          "id": "prismTasks",
          "name": "My Tasks",
          "when": "true"
        },
        {
          "id": "prismTeam",
          "name": "Team Status",
          "when": "true"
        },
        {
          "id": "prismConflicts",
          "name": "Conflict Warnings",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prism-sidebar",
          "title": "Prism",
          "icon": "$(symbol-namespace)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "prism.startTask",
          "when": "view == prismTasks",
          "group": "navigation"
        },
        {
          "command": "prism.checkConflicts",
          "when": "view == prismConflicts",
          "group": "navigation"
        },
        {
          "command": "prism.openChat",
          "when": "view == prismTeam",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "prism.openDashboard"
        },
        {
          "command": "prism.startTask"
        },
        {
          "command": "prism.checkConflicts"
        },
        {
          "command": "prism.openChat"
        },
        {
          "command": "prism.showTasks"
        }
      ]
    },
    "configuration": {
      "title": "Prism",
      "properties": {
        "prism.apiUrl": {
          "type": "string",
          "default": "http://localhost:5000",
          "description": "Prism backend API URL"
        },
        "prism.enableConflictChecking": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic conflict checking"
        },
        "prism.checkInterval": {
          "type": "number",
          "default": 30,
          "description": "Conflict check interval in seconds"
        },
        "prism.teamId": {
          "type": "string",
          "default": "",
          "description": "Your team ID for collaboration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}